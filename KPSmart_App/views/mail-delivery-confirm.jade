doctype html
html(lang='en')
    head
        meta(charset='UTF-8')
        title Mail Delivery Confirm| KPSmart
        link(rel='stylesheet', href='stylesheets/style.css')
    body
        #nav
            .sidenav
                #nav-logo
                    a(href='welcome', title='KPSmart Home')
                        img(src='images/logo.png', height='75')
                .nav-contain
                    ul#nav-events
                        li
                            a(href='welcome')
                                strong Welcome
                        li#drop(onclick='toggle_visibility()')
                            a(href='#')
                                strong Business Events
                                span.arrow
                            ul#be
                                li#currenttab
                                    a(href='mailDelivery') Mail Delivery
                                li
                                    a(href='priceUpdate') Customer Price Update
                                li
                                    a(href='transportCostUpdate') Transport Cost Update
                                li
                                    a(href='routeManagement') Route Management
                        script(type='text/javascript').
                            function toggle_visibility() {
                                var e = document.getElementById('be')
                                var arr = document.getElementsByClassName('arrow');
                                if (e.style.display == 'block') {
                                    e.style.display = 'none';
                                }
                                else {
                                    e.style.display = 'block';
                                }
                            }
                        li
                            a(href='businessMonitoring')
                                strong Business Monitoring
                        if manager
                            li
                                a(href='decisionSupport')
                                    strong Decision Support
                #identifier
                    | Logged in as !{signedInUser}
                    if manager
                        img#m-image(src='images/manager.png')
                        br
                        span#m-status
                            i Manager
                        br
                    else
                        img#m-image(src='images/clerk.png')
                        br
                        span#m-status
                            i Clerk
                        br
                    a#logout(href='logout') Log out
        #body
            #page-title Mail Delivery Confirmation
            #content
                br
                p
                    | Please confirm your Parcel Details. You may change the Origin, Destination, Weight, and
                    | Volume of the Parcel if they are incorrect by selecting the back button.
                img#page-image(src='images/confirm-parcel.png')
                table#parcel-details
                    tr
                        td Origin
                        td.parcel-details-value !{origin}
                    tr
                        td Destination
                        td.parcel-details-value !{dest}
                    tr
                        td Weight
                        td.parcel-details-value !{weight}
                    tr
                        td Volume
                        td.parcel-details-value !{volume}
                    tr
                        td Freight Type
                        td.parcel-details-value !{freight}
                    tr
                        td Freight Brand
                        td.parcel-details-value !{company}
                    tr
                        td Date Sent
                        td.parcel-details-value !{send_date}
                    tr
                        td Travel Time
                        td.parcel-details-value !{travel_date}
                    tr
                        td(style='border-top: solid #0093c9')
                            strong Total Cost:$
                        td.parcel-details-value(style='border-top: solid #0093c9') !{cost}
                br
                form(role='form', method='post', action='mailDelivery/confirm')
                    input.button(type='submit', value='Back', onclick='goBack()')
                    input.button(type='submit', value='Confirm')
                    script.
                        function goBack(){
                            window.history.back();
                        }
