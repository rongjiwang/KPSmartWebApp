doctype html
html(lang='en')
    head
        meta(charset='UTF-8')
        title Log In | KPSmart
        link(rel='stylesheet', href='stylesheets/style.css')
    body(onload='showDecTab()')
        #container
            #logo
                img#titlelogo(src='images/logo.png')
            form(role="form" method="post" action="/")
                #login
                    p Enter your credentials
                    #username
                        input(type='text', name='username', placeholder='Username')
                        br
                    #password
                        input(type='password', name='password', placeholder='Password')
                        br
                    #loginbutton
                        button
                            span
                                a(type='submit')
                                    strong Log in
                    #ErrorMessage
                    p !{message}


