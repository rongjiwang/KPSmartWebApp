doctype html
html(lang='en')
    head
        meta(charset='UTF-8')
        title Route xx Pricing | KPSmart
        link(rel='stylesheet', href='stylesheets/style.css')
    body
        #nav
            .sidenav
                #nav-logo
                    a(href='welcome', title='KPSmart Home')
                        img(src='images/logo.png', height='75')
                .nav-contain
                    ul#nav-events
                        li
                            a(href='welcome')
                                strong Welcome
                        li#drop(onclick='toggle_visibility()')
                            a(href='#')
                                strong Business Events
                                span.arrow
                            ul#be
                                li
                                    a(href='mailDelivery') Mail Delivery
                                li#currenttab
                                    a(href='priceUpdate') Customer Price Update
                                li
                                    a(href='transportCostUpdate') Transport Cost Update
                                li
                                    a(href='routeManagement') Route Management
                        script(type='text/javascript').
                            function toggle_visibility() {
                                var e = document.getElementById('be')
                                var arr = document.getElementsByClassName('arrow');
                                if(e.style.display == 'block') {
                                    e.style.display = 'none';
                                }
                                else {
                                    e.style.display = 'block';
                                }
                            }
                        li
                            a(href='businessMonitoring')
                                strong Business Monitoring
                #identifier
                    | Logged in as !{signedInUser}
                    if manager
                        img#m-image(src='images/manager.png')
                    else
                        img#m-image(src='images/clerk.png')
                    br
                    span#m-status
                        i !{signedInUser}
        #body
            #page-title Route xx Price Update
            #content
                p Please select an element for the price of this route to maintain.
                img#page-image(src='images/coin.png')
                br
                br
                form#route-price-adj
                    | Price per Kilometre ($/km)
                    span.pricing-min
                        strong - Current Price: $x:xx/km
                    br
                    input(type='number', step='0.01' min="!!!cost!!!" , placeholder='Price per km')
                    span.pricing-min - Current Cost: $x:xx/km
                    br
                    br
                    |             Price per Kilogram ($/kg)
                    span.pricing-min
                        strong - Current Price: $x:xx/kg
                    br
                    input(type='number', step='0.01' min="!!!cost!!!", placeholder='Price per kg')
                    span.pricing-min - Current Cost: $x:xx/kg
                    br
                    br
                    |             Price per Cubic Metre ($/m
                    sup 3
                    | )
                    span.pricing-min
                        strong
                            | - Current Price: $x:xx/m
                            sup 3
                    br
                    input(type='number' step='0.01' min="!!!cost!!!", placeholder='Price per cubic m')
                    span.pricing-min
                        | - Current Cost: $x:xx/m
                        sup 3
                    br
                    br
                    input#submit(type='submit', value='Submit', onclick='check()')
                    script.
                        function check(){
                            confirm("Are you sure about these changes?");
                        }
